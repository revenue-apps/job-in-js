# API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here

# AWS Configuration (Required for DynamoDB)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# Stagehand Configuration
STAGEHAND_ENV=production
STAGEHAND_MODEL_NAME=gpt-4o-mini
STAGEHAND_TIMEOUT=30000
STAGEHAND_RETRIES=3

# Application Settings
LOG_LEVEL=info
REQUEST_TIMEOUT=10000
MAX_RETRIES=3
MAX_CONCURRENT_APPLICATIONS=1
DELAY_BETWEEN_APPLICATIONS=2000
APPLICATION_TIMEOUT=60000

# File Paths
CSV_INPUT_PATH=./data/job_urls.csv
OUTPUT_DIR=./output
DATA_DIR=./data
DOWNLOADS_DIR=./downloads

# Logging
LOG_FORMAT=json
LOG_FILE=./logs/application.log

# Validation Settings
REQUIRE_RESUME=true
REQUIRE_COVER_LETTER=false
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx

# API Server Configuration
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
VALID_API_KEYS=test-api-key,your-production-api-key

# Optional Advanced Settings
AUTO_GENERATE_COVER_LETTER=true
CUSTOMIZE_APPLICATIONS=true
SKIP_JOBS_WITH_LOGIN_REQUIRED=true
MAX_APPLICATIONS_PER_SESSION=10
CONTINUE_ON_ERROR=true
SAVE_FAILED_APPLICATIONS=true
RETRY_FAILED_APPLICATIONS=false
SAVE_SCREENSHOTS=true
SAVE_HTML_SNAPSHOTS=false
GENERATE_APPLICATION_REPORTS=true 